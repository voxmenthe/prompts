{
  "cleanupPeriodDays": 90,
  "includeCoAuthoredBy": false,
  "model": "opus",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/you_are_not_right.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "printf '\\033[1;33m%s\\033[0m ' \"$(basename \"$(pwd)\")\""
  }
}